<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--add code about new servlet-->
    <servlet>
        <servlet-name>anyName</servlet-name><!-- give any name -->
        <servlet-class>com.yancheng.week2.demo.homework.HelloWorldServlet</servlet-class><!--package +name of servlet class -->
    </servlet>
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.yancheng.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>
    <!--automatic code-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.yancheng.week3.demo.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <servlet-class>com.yancheng.week4.demo.JDBCDemoServlet</servlet-class>

        <!--//String driver = "com.microsoft.sqlserver.jdbc.SQLServerDriver";
          //String url = "jdbc:sqlserver://localhost;databaseName=MDSK;";
          //String username = "sa";
          //String password = "YanLaoBan";-->
        <!-- set in web.xml as config parameter , for only one servlet , JDBCDemoServlet-->
        <init-param>
            <param-name>driver</param-name>
            <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:sqlserver://localhost;databaseName=MDSK;</param-value>
        </init-param>
        <init-param>
            <param-name>username</param-name>
            <param-value>sa</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>YanLaoBan</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <!--load and call init() when tomcat start -->
    </servlet>
    <servlet-mapping>
        <servlet-name>JDBCDemoServlet</servlet-name>
        <url-pattern>/jdbc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>anyName</servlet-name>
        <url-pattern>/hello</url-pattern><!-- url must start with / -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/Life </url-pattern>
        <!-- /life ==LifeCycleServlet== com.yancheng.week3.demo.LifeCycleServlet  -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern><!--Write this url in action-->
    </servlet-mapping>
    <!-- x= 5,a=x so we can say a=5
    so /hello==HelloWorldServlet -->
</web-app>